{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Flutter Debug (No Impeller)",
            "request": "launch",
            "type": "dart",
            "program": "lib/main.dart",
            "args": [
                "--no-enable-impeller"
            ],
            "flutterMode": "debug"
        },
        {
            "name": "Flutter Release (No Impeller)",
            "request": "launch",
            "type": "dart",
            "program": "lib/main.dart",
            "args": [
                "--no-enable-impeller"
            ],
            "flutterMode": "release"
        },
        {
            "name": "Flutter Debug (Web)",
            "request": "launch",
            "type": "dart",
            "program": "lib/main.dart",
            "args": [
                "-d",
                "web-server",
                "--web-hostname",
                "localhost",
                "--web-port",
                "8080"
            ],
            "flutterMode": "debug"
        }
    ]
}
